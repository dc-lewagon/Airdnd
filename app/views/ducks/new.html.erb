<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>Create a new Duck</h1>
      <%= simple_form_for @duck do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= cl_image_tag("THE_IMAGE_ID_FROM_LIBRARY"), width: 400, height: 300, crop: :fill) %>
        <%-#<%= f.input :category, collection: Restaurant::CATEGORIES %>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
